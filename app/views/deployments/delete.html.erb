<% @page_title = "Delete an Environment" %>


<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="deployment delete">
		<h2>Delete Environment</h2>
		
		<%= form_for(:deployment, :url => {:action => 'destroy', :id => @deployment.id}) do |f| %>
		
		<p>Are you sure you want to permanently delete this environment?</p>
		<p class="reference-name"><%= @deployment.environment %></p>
		<div class="form-buttons">
			<%= submit_tag("Delete Environment") %>
		</div>
	<% end %>
</div>